<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<TextView
    android:id="@+id/lbltex"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="OPERACIONES BASICAS"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="80dp"
    android:textAlignment="center"
    />

    <EditText
        android:id="@+id/txtnum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbltex"
        android:layout_marginTop="10dp"
        android:hint="Escribe un numero" />

    <EditText
        android:id="@+id/txtnum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtnum1"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="10dp"
        android:hint="Escribe un numero" />

    <RadioGroup
        android:id="@+id/optOparacionesBasicas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtnum2"
        android:layout_margin="1dp"
        android:layout_marginTop="-8dp"
        android:layout_marginBottom="20dp">

        <RadioButton
            android:id="@+id/optSuma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="+" />

        <RadioButton
            android:id="@+id/optResta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />

        <RadioButton
            android:id="@+id/optMultiplicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*" />

        <RadioButton
            android:id="@+id/optDivision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/" />

        <RadioButton
            android:id="@+id/optFactorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="!" />

        <RadioButton
            android:id="@+id/optPorcentaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%" />

        <RadioButton
            android:id="@+id/optExponenciacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="^" />

        <RadioButton
            android:id="@+id/optRaiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âˆš " />

        <RadioButton
            android:id="@+id/optModulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mod" />

        <RadioButton
            android:id="@+id/optMayor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">" />
    </RadioGroup>

    <TextView
        android:id="@+id/lblRespuesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/optOparacionesBasicas"
        android:layout_marginTop="-35dp"
        android:text="Respuesta"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblRespuesta"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="10dp"
        android:onClick="calcular"
        android:text="Calcular" />


</RelativeLayout>